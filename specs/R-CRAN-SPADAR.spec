%global __brp_check_rpaths %{nil}
%global packname  SPADAR
%global packver   1.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.0
Release:          3%{?dist}%{?buildtag}
Summary:          Spherical Projections of Astronomical Data

License:          GPL (>= 3)
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel
Requires:         R-core
BuildArch:        noarch
BuildRequires:    R-CRAN-mapproj 
BuildRequires:    R-CRAN-RCEIM 
Requires:         R-CRAN-mapproj 
Requires:         R-CRAN-RCEIM 

%description
Provides easy to use functions to create all-sky grid plots of widely used
astronomical coordinate systems (equatorial, ecliptic, galactic) and
scatter plots of data on any of these systems including on-the-fly system
conversion. It supports any type of spherical projection to the plane
defined by the 'mapproj' package.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

