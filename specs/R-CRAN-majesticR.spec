%global packname  majesticR
%global packver   0.1.1
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.1.1
Release:          1%{?dist}
Summary:          R Interface to Access the 'Majestic' API

License:          GPL-3
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel
Requires:         R-core
BuildArch:        noarch
BuildRequires:    R-utils 
BuildRequires:    R-CRAN-jsonlite 
BuildRequires:    R-CRAN-urltools 
Requires:         R-utils 
Requires:         R-CRAN-jsonlite 
Requires:         R-CRAN-urltools 

%description
Implements methods for querying backlink data from 'Majestic' using its
API (<https://developer-support.majestic.com/api/>). 'Majestic' API uses a
basic authentication with an API key. This package is used in the "Do You
Need Backlinks for SEO" tutorial <https://remibacha.com/en/backlinks-r/>.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%dir %{rlibdir}/%{packname}
%doc %{rlibdir}/%{packname}/html
