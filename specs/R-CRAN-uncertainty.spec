%global packname  uncertainty
%global packver   0.2.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.2.0
Release:          1%{?dist}
Summary:          Uncertainty Estimation and Contribution Analysis

License:          GPL (>= 2)
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.4.0
Requires:         R-core >= 3.4.0
BuildArch:        noarch
BuildRequires:    R-graphics >= 3.4.0
BuildRequires:    R-stats >= 3.4.0
BuildRequires:    R-CRAN-mvtnorm >= 0.9
BuildRequires:    R-CRAN-triangle >= 0.7
Requires:         R-graphics >= 3.4.0
Requires:         R-stats >= 3.4.0
Requires:         R-CRAN-mvtnorm >= 0.9
Requires:         R-CRAN-triangle >= 0.7

%description
Implements the Gaussian method of first and second order, the Kragten
numerical method and the Monte Carlo simulation method for uncertainty
estimation and analysis.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%dir %{rlibdir}/%{packname}
%doc %{rlibdir}/%{packname}/html
%{rlibdir}/%{packname}/Meta
%{rlibdir}/%{packname}/help
%{rlibdir}/%{packname}/DESCRIPTION
%{rlibdir}/%{packname}/NAMESPACE
%{rlibdir}/%{packname}/R
%{rlibdir}/%{packname}/INDEX
