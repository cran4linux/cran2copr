%global __brp_check_rpaths %{nil}
%global packname  addreg
%global packver   3.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          3.0
Release:          3%{?dist}%{?buildtag}
Summary:          Additive Regression for Discrete Data

License:          GPL (>= 2)
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.0.1
Requires:         R-core >= 3.0.1
BuildArch:        noarch
BuildRequires:    R-splines 
BuildRequires:    R-CRAN-combinat 
BuildRequires:    R-CRAN-glm2 
BuildRequires:    R-CRAN-turboEM 
Requires:         R-splines 
Requires:         R-CRAN-combinat 
Requires:         R-CRAN-glm2 
Requires:         R-CRAN-turboEM 

%description
Methods for fitting identity-link GLMs and GAMs to discrete data, using
EM-type algorithms with more stable convergence properties than standard
methods.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%{rlibdir}/%{packname}
