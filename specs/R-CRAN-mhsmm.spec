%global __brp_check_rpaths %{nil}
%global packname  mhsmm
%global packver   0.4.16
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.4.16
Release:          3%{?dist}%{?buildtag}
Summary:          Inference for Hidden Markov and Semi-Markov Models

License:          GPL (>= 2)
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel
Requires:         R-core
BuildRequires:    R-CRAN-mvtnorm 
Requires:         R-CRAN-mvtnorm 

%description
Parameter estimation and prediction for hidden Markov and semi-Markov
models for data with multiple observation sequences.  Suitable for
equidistant time series data, with multivariate and/or missing data.
Allows user defined emission distributions.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

