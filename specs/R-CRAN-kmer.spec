%global packname  kmer
%global packver   1.1.2
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.1.2
Release:          1%{?dist}
Summary:          Fast K-Mer Counting and Clustering for Biological SequenceAnalysis

License:          GPL-3
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel
Requires:         R-core
BuildRequires:    R-CRAN-Rcpp >= 0.12.13
BuildRequires:    R-CRAN-openssl 
BuildRequires:    R-CRAN-phylogram 
Requires:         R-CRAN-Rcpp >= 0.12.13
Requires:         R-CRAN-openssl 
Requires:         R-CRAN-phylogram 

%description
Contains tools for rapidly computing distance matrices and clustering
large sequence datasets using fast alignment-free k-mer counting and
recursive k-means partitioning. See Vinga and Almeida (2003)
<doi:10.1093/bioinformatics/btg005> for a review of k-mer counting methods
and applications for biological sequence analysis.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

