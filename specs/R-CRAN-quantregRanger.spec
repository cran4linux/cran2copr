%global __brp_check_rpaths %{nil}
%global packname  quantregRanger
%global packver   1.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.0
Release:          3%{?dist}%{?buildtag}
Summary:          Quantile Regression Forests for 'ranger'

License:          GPL-3
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.0.2
Requires:         R-core >= 3.0.2
BuildRequires:    R-CRAN-Rcpp >= 0.12.2
BuildRequires:    R-stats 
BuildRequires:    R-CRAN-ranger 
Requires:         R-CRAN-Rcpp >= 0.12.2
Requires:         R-stats 
Requires:         R-CRAN-ranger 

%description
This is the implementation of quantile regression forests for the fast
random forest package 'ranger'.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}

test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%{rlibdir}/%{packname}
