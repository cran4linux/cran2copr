%global __brp_check_rpaths %{nil}
%global packname  Rsconctdply
%global packver   0.1.3
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.1.3
Release:          3%{?dist}%{?buildtag}
Summary:          Deploys Multiple 'Shiny' Apps using Configuration File

License:          MIT + file LICENSE
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.0.1
Requires:         R-core >= 3.0.1
BuildArch:        noarch
BuildRequires:    R-CRAN-rjson 
BuildRequires:    R-CRAN-rsconnect 
BuildRequires:    R-CRAN-dplyr 
Requires:         R-CRAN-rjson 
Requires:         R-CRAN-rsconnect 
Requires:         R-CRAN-dplyr 

%description
Provides a tool for mass deployment of shiny apps to 'RStudio Connect' or
'Shiny Server'. Multiple user accounts and servers can be configured for
deployment.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}

test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%{rlibdir}/%{packname}
