%global packname  lle
%global packver   1.1
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.1
Release:          3%{?dist}%{?buildtag}
Summary:          Locally linear embedding

License:          GPL-3
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel
Requires:         R-core
BuildArch:        noarch
BuildRequires:    R-CRAN-scatterplot3d 
BuildRequires:    R-MASS 
BuildRequires:    R-CRAN-snowfall 
Requires:         R-CRAN-scatterplot3d 
Requires:         R-MASS 
Requires:         R-CRAN-snowfall 

%description
LLE is a non-linear algorithm for mapping high-dimensional data into a
lower dimensional (intrinsic) space. This package provides the main
functions to performs the LLE alogrithm including some enhancements like
subset selection, calculation of the intrinsic dimension etc.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

