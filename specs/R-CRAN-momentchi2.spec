%global __brp_check_rpaths %{nil}
%global packname  momentchi2
%global packver   0.1.5
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.1.5
Release:          3%{?dist}%{?buildtag}
Summary:          Moment-Matching Methods for Weighted Sums of Chi-Squared RandomVariables

License:          GPL-2 | GPL-3
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.1.2
Requires:         R-core >= 3.1.2
BuildArch:        noarch

%description
A collection of moment-matching methods for computing the cumulative
distribution function of a positively-weighted sum of chi-squared random
variables. Methods include the Satterthwaite-Welch method,
Hall-Buckley-Eagleson method, Wood's F method, and the Lindsay-Pilla-Basak
method.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%{rlibdir}/%{packname}
