%global packname  FitARMA
%global packver   1.6.1
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.6.1
Release:          3%{?dist}
Summary:          Fit ARMA or ARIMA Using Fast MLE Algorithm

License:          GPL (>= 2)
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 2.1.0
Requires:         R-core >= 2.1.0
BuildRequires:    R-CRAN-FitAR 
Requires:         R-CRAN-FitAR 

%description
Implements fast maximum likelihood algorithm for fitting ARMA time series.
Uses S3 methods print, summary, fitted, residuals. Fast exact Gaussian
ARMA simulation.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}

test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

