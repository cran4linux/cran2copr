%global __brp_check_rpaths %{nil}
%global packname  ider
%global packver   0.1.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.1.0
Release:          3%{?dist}%{?buildtag}
Summary:          Various Methods for Estimating Intrinsic Dimension

License:          GPL-2
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.2.1
Requires:         R-core >= 3.2.1
BuildArch:        noarch
BuildRequires:    R-CRAN-FNN 
BuildRequires:    R-stats 
Requires:         R-CRAN-FNN 
Requires:         R-stats 

%description
An implementation of various methods for estimating intrinsic dimension of
vector-valued dataset or distance matrix. Most methods implemented are
based on different notion of fractal dimension such as the capacity
dimension, the box-counting dimension, and the information dimension.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

