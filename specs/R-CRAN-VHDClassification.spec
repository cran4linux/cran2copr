%global __brp_check_rpaths %{nil}
%global packname  VHDClassification
%global packver   0.3
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.3
Release:          3%{?dist}%{?buildtag}
Summary:          Discrimination/Classification in very high dimension with linearand quadratic rules.

License:          GPL-2
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel
Requires:         R-core
BuildArch:        noarch
BuildRequires:    R-methods 
BuildRequires:    R-CRAN-e1071 
BuildRequires:    R-lattice 
BuildRequires:    R-stats 
Requires:         R-methods 
Requires:         R-CRAN-e1071 
Requires:         R-lattice 
Requires:         R-stats 

%description
This package provides an implementation of Linear discriminant analysis
and quadratic discriminant analysis that works fine in very high dimension
(when there are many more variables than observations).

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}

test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%{rlibdir}/%{packname}
