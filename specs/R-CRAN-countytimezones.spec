%global __brp_check_rpaths %{nil}
%global packname  countytimezones
%global packver   1.0.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.0.0
Release:          3%{?dist}%{?buildtag}
Summary:          Convert from UTC to Local Time for United States Counties

License:          GPL-2
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 2.10
Requires:         R-core >= 2.10
BuildArch:        noarch
BuildRequires:    R-CRAN-lubridate >= 1.5.6
BuildRequires:    R-CRAN-dplyr >= 0.4.3
Requires:         R-CRAN-lubridate >= 1.5.6
Requires:         R-CRAN-dplyr >= 0.4.3

%description
Inputs date-times in Coordinated Universal Time (UTC) and converts to a
local date-time and local date for US counties, based on each county's
Federal Information Processing Standard (FIPS) code. This work was
supported in part by grants from the National Institute of Environmental
Health Sciences (R00ES022631) and the National Science Foundation
(1331399).

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

