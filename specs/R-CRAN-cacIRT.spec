%global packname  cacIRT
%global packver   1.4
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.4
Release:          1%{?dist}
Summary:          Classification Accuracy and Consistency under Item ResponseTheory

License:          GPL (>= 2)
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel
Requires:         R-core
BuildArch:        noarch

%description
Computes classification accuracy and consistency indices under Item
Response Theory. Implements the total score IRT-based methods in Lee,
Hanson & Brennen (2002) and Lee (2010), the IRT-based methods in Rudner
(2001, 2005), and the total score nonparametric methods in Lathrop & Cheng
(2014). For dichotomous and polytomous tests.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

