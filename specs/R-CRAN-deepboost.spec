%global packname  deepboost
%global packver   0.1.6
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.1.6
Release:          3%{?dist}%{?buildtag}
Summary:          Deep Boosting Ensemble Modeling

License:          Apache License (== 2.0)
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.1
Requires:         R-core >= 3.1
BuildRequires:    R-CRAN-Rcpp >= 0.12.2
BuildRequires:    R-methods 
Requires:         R-CRAN-Rcpp >= 0.12.2
Requires:         R-methods 

%description
Provides deep boosting models training, evaluation, predicting and hyper
parameter optimising using grid search and cross validation. Based on
Google's Deep Boosting algorithm, and Google's C++ implementation. Cortes,
C., Mohri, M., & Syed, U. (2014)
<http://machinelearning.wustl.edu/mlpapers/papers/icml2014c2_cortesb14>.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

