%global __brp_check_rpaths %{nil}
%global packname  cmce
%global packver   0.1.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.1.0
Release:          3%{?dist}%{?buildtag}
Summary:          Computer Model Calibration for Deterministic and StochasticSimulators

License:          AGPL-3
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.2.3
Requires:         R-core >= 3.2.3
BuildArch:        noarch
BuildRequires:    R-stats 
Requires:         R-stats 

%description
Implements the Bayesian calibration model described in Pratola and
Chkrebtii (2018) <DOI:10.5705/ss.202016.0403> for stochastic and
deterministic simulators.  Additive and multiplicative discrepancy models
are currently supported. See <http://www.matthewpratola.com/software> for
more information and examples.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%{rlibdir}/%{packname}
