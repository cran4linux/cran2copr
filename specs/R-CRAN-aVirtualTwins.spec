%global packname  aVirtualTwins
%global packver   1.0.1
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.0.1
Release:          3%{?dist}
Summary:          Adaptation of Virtual Twins Method from Jared Foster

License:          GPL-3 | file LICENSE
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.2.0
Requires:         R-core >= 3.2.0
BuildArch:        noarch
BuildRequires:    R-rpart 
BuildRequires:    R-CRAN-party 
BuildRequires:    R-methods 
BuildRequires:    R-CRAN-randomForest 
BuildRequires:    R-stats 
Requires:         R-rpart 
Requires:         R-CRAN-party 
Requires:         R-methods 
Requires:         R-CRAN-randomForest 
Requires:         R-stats 

%description
Research of subgroups in random clinical trials with binary outcome and
two treatments groups. This is an adaptation of the Jared Foster method
(<https://www.ncbi.nlm.nih.gov/pubmed/21815180>).

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%dir %{rlibdir}/%{packname}
%doc %{rlibdir}/%{packname}/html
%{rlibdir}/%{packname}/Meta
%{rlibdir}/%{packname}/help
%{rlibdir}/%{packname}/data
%{rlibdir}/%{packname}/DESCRIPTION
%license %{rlibdir}/%{packname}/LICENSE
%{rlibdir}/%{packname}/NAMESPACE
%{rlibdir}/%{packname}/R
%doc %{rlibdir}/%{packname}/doc
%{rlibdir}/%{packname}/INDEX
