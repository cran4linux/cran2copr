%global __brp_check_rpaths %{nil}
%global packname  censusGeography
%global packver   0.1.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.1.0
Release:          3%{?dist}%{?buildtag}
Summary:          Changes United States Census Geographic Code into Name ofLocation

License:          GPL
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 2.10
Requires:         R-core >= 2.10
BuildArch:        noarch
BuildRequires:    R-CRAN-qdapTools 
Requires:         R-CRAN-qdapTools 

%description
Converts the United States Census geographic code for city, state (FIP and
ICP), region, and birthplace, into the name of the region. e.g. takes an
input of Census city code 5330 to it's actual city, Philadelphia. Will
return NA for code that doesn't correspond to real location.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}

test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%{rlibdir}/%{packname}
