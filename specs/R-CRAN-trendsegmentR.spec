%global __brp_check_rpaths %{nil}
%global packname  trendsegmentR
%global packver   1.0.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.0.0
Release:          3%{?dist}%{?buildtag}
Summary:          Linear Trend Segmentation and Point Anomaly Detection

License:          GPL
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 3.6.0
Requires:         R-core >= 3.6.0
BuildArch:        noarch

%description
Performs the detection of point anomalies and linear trend changes for
univariate time series by implementing the bottom-up unbalanced wavelet
transformation proposed by H. Maeng and P. Fryzlewicz (2019)
<http://personal.lse.ac.uk/maengh/>. The estimated number and locations of
the change-points are returned with the piecewise-linear estimator for
signal.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

