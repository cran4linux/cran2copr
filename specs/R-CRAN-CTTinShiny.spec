%global __brp_check_rpaths %{nil}
%global packname  CTTinShiny
%global packver   0.1.0
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          0.1.0
Release:          3%{?dist}%{?buildtag}
Summary:          Shiny Interface for the CTT Package

License:          GPL-2
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel
Requires:         R-core
BuildArch:        noarch
BuildRequires:    R-CRAN-CTT 
BuildRequires:    R-CRAN-shiny 
BuildRequires:    R-foreign 
Requires:         R-CRAN-CTT 
Requires:         R-CRAN-shiny 
Requires:         R-foreign 

%description
A Shiny interface developed in close coordination with the CTT package,
providing a GUI that guides the user through CTT analyses.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%{rlibdir}/%{packname}
