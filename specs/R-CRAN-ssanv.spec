%global __brp_check_rpaths %{nil}
%global packname  ssanv
%global packver   1.1
%global rlibdir   /usr/local/lib/R/library

Name:             R-CRAN-%{packname}
Version:          1.1
Release:          3%{?dist}%{?buildtag}
Summary:          Sample Size Adjusted for Nonadherence or Variability of InputParameters

License:          GPL-3
URL:              https://cran.r-project.org/package=%{packname}
Source0:          %{url}&version=%{packver}#/%{packname}_%{packver}.tar.gz


BuildRequires:    R-devel >= 2.1.1
Requires:         R-core >= 2.1.1
BuildArch:        noarch
BuildRequires:    R-stats 
Requires:         R-stats 

%description
A set of functions to calculate sample size for two-sample difference in
means tests. Does adjustments for either nonadherence or variability that
comes from using data to estimate parameters.

%prep
%setup -q -c -n %{packname}


%build

%install

mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%files
%{rlibdir}/%{packname}
